<% content_for :title do %>
    Editing <%= @category.category %>
<% end %>
            
<div class="layout horizontal center-justified">
    <paper-material id="new_major_form_shadow">
        <%= form_for(@category, remote: true) do |f| %>
                
            <paper-input-container id="new-category-category">
                <%= f.label :category, "Category (ex: Electives, Core, etc.)" %>
                <%= f.text_field :category, is: "iron-input" %>
                <paper-input-error></paper-input-error>
            </paper-input-container>
        
            <div class="layout horizontal center-justified" style="margin-top:12px;">
                <paper-radio-group selected="<%= (@category.minor) ? "minor" : "major" %>">
                  <paper-radio-button name="major" id="major_paper_radio">Major</paper-radio-button>
                  <paper-radio-button name="minor" id="minor_paper_radio">Minor</paper-radio-button>
                </paper-radio-group>
            </div>

            <div class="layout horizontal center-center" style="text-align:center;font-size:16px;font-weight:bold;font-family:'Roboto', 'Helvetica Neue', Helvetica, Arial, sans-serif;margin-top:18px;">
                <%= f.label :set_and_or_flag, "If there will be more than one set will they be anded or ored together? Else leave as N\\A." %>
            </div>

            <div class="layout horizontal center-justified">
                <paper-radio-group selected="<%= @set_log_op%>">
                  <paper-radio-button name="and" id="set_logic_and_paper_radio">And</paper-radio-button>
                  <paper-radio-button name="or" id="set_logic_or_paper_radio">Or</paper-radio-button>
                  <paper-radio-button name="na" id="set_logic_na_paper_radio">N/A</paper-radio-button>
                </paper-radio-group>
            </div>

            <div hidden>
                <%= f.radio_button(:set_and_or_flag, false) %>
                <%= f.radio_button(:set_and_or_flag, true) %>
                <% if @category.set_and_or_flag == nil %>
                    <%= f.radio_button(:set_and_or_flag, 0, options ={ checked: "checked"})%>
                <% else %>
                    <%= f.radio_button(:set_and_or_flag, 0)%>
                <% end %>

                <%= f.radio_button(:minor, false) %>
                <%= f.radio_button(:minor, true) %>
            </div>
        
            <br><br><br>
            <div class="layout horizontal end-justified" style="color:#2196F3;">
                <paper-button id="cancel_new_category">Cancel</paper-button>
                <paper-button id="update-category">Update</paper-button>
            </div>           
        <% end %>
    </paper-material>
</div>


