<% if not @errors %>
    $("#transcript_course_error_text").fadeOut();
    $("#transcript_course_id").removeClass("dropdown-error");
    $("#transcript_course_id").val("");
    $("#transcript_grade_c").val("");
    $("#transcript_course_id" ).css("color", "#757575");
    $("#transcript_grade_c" ).css("color", "#757575");

    $("#transcript-items").append("<%= j render @transcript %>");    

    <% if @index_reload_flag %>    
      $("#schedules-animate").html("<%= j render 'schedules/index' %>");
    <% end %>

    $.ajax({
      url: "<%= new_user_schedule_path(@user) %>",
    }).done(function(html) {
        $("#transcript-notice-toast").attr("text", "<%= @transcript.course.title %> added to your transcript!");
        $("#transcript-notice-toast")[0].toggle();

        return $("#new-schedule-animate").html(html);
    });

<% else %>
    <% if not @transcript.errors[:course].blank? %>
        $("#transcript_course_error_text").html("<%= raw @transcript.errors[:course][0].capitalize %>");
        $("#transcript_course_error_text").fadeIn();
        $("#transcript_course_id").addClass("dropdown-error");
    <% end %>
<% end %>

