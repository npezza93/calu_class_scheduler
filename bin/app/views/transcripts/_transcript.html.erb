<iron-collapse id="transcript_<%= transcript.id %>" opened>
	<paper-item style="height:72px;">
	    <paper-item-body two-line class="layout vertical">
	        <div><%= transcript.course.pretty_course %></div>
	        <div secondary style="font-size: 14px;line-height: 20px;" class="layout horizontal">
	        	<%= link_to 'Delete', user_transcript_path(@user, transcript), method: :delete, data: { confirm: 'Are you sure you want to remove this course?' }, remote: true, class: "transcript_remove_link" %>
	        </div>
	    </paper-item-body>
	</paper-item>
</iron-collapse>