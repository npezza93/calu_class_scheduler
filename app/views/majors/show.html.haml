- content_for :title, "Majors"
- content_for :back_url, majors_path

.layout.vertical.center.mt-4
  .mdc-card{ style: "width: 400px;max-width: 90%;background:#fff;"}
    %section.mdc-card__primary
      %h1.mdc-card__title.mdc-card__title--large= @major.major
    %section.mdc-card__actions
      = link_to "New Category", new_major_curriculum_category_path(@major),
          class: "mdc-button mdc-button--compact mdc-card__action"
      = link_to "Edit", edit_major_path(@major),
          class: "mdc-button mdc-button--compact mdc-card__action"
      = link_to "Destroy", @major, data: { confirm: "Are you sure?" },
          method: :delete,
          class: "mdc-button mdc-button--compact mdc-card__action delete-action"

  - if @major.major_categories.empty?
    .mdc-typography--subheading2.mt-5 No Major Categories
  - else
    .mdc-typography--subheading2.mt-5{ style: "width: 400px;max-width: 90%;"}
      Major Categories
    .mdc-card{ style: "width: 400px;max-width: 90%;background:#fff;"}
      .mdc-list
        - @major.major_categories.each do |category|
          = link_to major_curriculum_category_path(@major, category), class: "mdc-list-item", style: "width: 100%;", "data-mdc-auto-init" => "MDCRipple" do
            .mdc-list-item__text= category.category
            %i.mdc-list-item__end-detail.material-icons
              chevron_right

  - if @major.minor_categories.empty?
    .mdc-typography--subheading2.mt-5 No Minor Categories
  - else
    .mdc-typography--subheading2.mt-5{ style: "width: 400px;max-width: 90%;"}
      Minor Categories
    .mdc-card.mb-5{ style: "width: 400px;max-width: 90%;background:#fff;"}
      .mdc-list
        - @major.minor_categories.each do |category|
          = link_to major_curriculum_category_path(@major, category), class: "mdc-list-item", style: "width: 100%;", "data-mdc-auto-init" => "MDCRipple" do
            .mdc-list-item__text= category.category
            %i.mdc-list-item__end-detail.material-icons
              chevron_right
