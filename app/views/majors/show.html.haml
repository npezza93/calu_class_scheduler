- content_for :title, "#{@major.major} Major"
- content_for :back_url, majors_path
- content_for :toolbar_actions do
  = link_to edit_major_path(@major), class: "ml-2", style: "color: #fff;display:flex;" do
    = material_icon.mode_edit
  = link_to major_path(@major), data: { confirm: "Are you sure?" }, method: :delete, class: "ml-2", style: "color: #fff;display:flex;" do
    = material_icon.delete

.layout.vertical.center{ style: "margin-top: 32px;" }
  .mdc-typography--subheading2{ style: "width: 400px;max-width: 90%;"} Major Categories
  .mdc-card{ style: "width: 400px;max-width: 90%;margin-bottom: 40px;background:#fff;"}
    .mdc-list
      - @major.major_categories.each do |category|
        = link_to major_curriculum_category_path(@major, category), class: "mdc-list-item", style: "width: 100%;", "data-mdc-auto-init" => "MDCRipple" do
          .mdc-list-item__text= category.category
          %i.mdc-list-item__end-detail.material-icons
            chevron_right

  .mdc-typography--subheading2{ style: "width: 400px;max-width: 90%;"} Minor Categories
  .mdc-card{ style: "width: 400px;max-width: 90%;margin-bottom: 40px;background:#fff;"}
    .mdc-list
      - @major.minor_categories.each do |category|
        = link_to major_curriculum_category_path(@major, category), class: "mdc-list-item", style: "width: 100%;", "data-mdc-auto-init" => "MDCRipple" do
          .mdc-list-item__text= category.category
          %i.mdc-list-item__end-detail.material-icons
            chevron_right
