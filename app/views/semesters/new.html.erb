<% content_for :title do %>
    Add a New Semester
<% end %>

<div class="layout horizontal center-justified">
    <paper-material id="new_major_form_shadow">
        <%= form_for(@semester, remote: true) do |f| %>
                
            <paper-input-container id="new-semester-semester">
                <%= f.label :semester  %>
                <%= f.text_field :semester, is: "iron-input" %>
                <paper-input-error></paper-input-error>
            </paper-input-container>
        
            <br><br><br>
            <div class="layout horizontal end-justified" style="color:#2196F3;">
                <paper-button id="cancel_new_semester">Cancel</paper-button>
                <paper-button id="create-semester">Submit</paper-button>
            </div>           
        <% end %>
    </paper-material>
</div>