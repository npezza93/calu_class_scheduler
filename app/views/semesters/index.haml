- content_for :title do
  Semesters

- if active_semester
  .layout.vertical.center
    %h3.mdl-display-2.header
      system semester: #{active_semester.semester}

    = form_for active_semester, url: system_semesters_path, method: :put do |f|
      = f.collection_select(:id, Semester.all, :id, :semester)
      = f.submit "Set System Semester"

    - if active_semester != session_semester
      %h3.mdl-display-2.header
        session semester:
        = session_semester.semester

    = form_for session_semester, url: set_session_semesters_path, method: :put do |f|
      = f.collection_select(:id, Semester.all, :id, :semester)
      = f.submit "Set Session Semester"

= link_to new_semester_path do
  %button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored.new_category_fab
    %i.material-icons
      add
