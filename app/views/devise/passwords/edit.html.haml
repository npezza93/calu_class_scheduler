- content_for :title, "Change Password"

.devise-container.layout.vertical.center.my-4.mx-0
  = image_tag "callogo2.png"

  = form_for resource, as: resource_name, url: password_path(resource_name),
             html: { method: :put, class: "layout vertical center" } do |f|

    = f.hidden_field :reset_password_token
    = f.password_field :password, autofocus: true, autocomplete: "off"
    = f.password_field :password_confirmation, autocomplete: "off", label: "Confirm Password"

    = f.submit "Change Password"
