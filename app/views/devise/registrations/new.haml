.devise-container
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    %h3.mdl-typography--display-2.bold.center-text Sign up
    = f.text_field :first_name, autofocus: true
    = f.text_field :last_name
    = f.email_field :email
    = f.password_field :password, autocomplete: "off"
    = f.password_field :password_confirmation, autocomplete: "off"
    = f.collection_select :major_id, Major.all, :id, :major, prompt: "Choose a Major"
    = f.collection_select :advised_by, User.where(advisor: true), :id, :email, prompt: "Choose an Advisor"

    = f.submit "Sign up"

  = render "devise/shared/links"
