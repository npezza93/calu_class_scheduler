- content_for :title do
  Settings

= form_for resource, as: resource_name, url: registration_path(resource_name),
           html: { method: :put } do |f|
  %h3.mdl-display-2.header Settings
  = f.password_field :password
  = f.password_field :password_confirmation
  = f.collection_select :major_id, Major.all, :id, :major, prompt: "Choose a Major"

  - unless current_user.advisor?
    = f.collection_select :advised_by, User.where(advisor: true),
                                       :id, :email, prompt: "Choose an Advisor"
    = f.collection_select :minor, Major.all, :id, :major, {prompt: "minor(s)" }, { multiple: true }
    .placement-test-dialog-toggle placement test scores
    = render "placement_tests", f: f

  .file-field.input-field
    .mdl-button
      %span Avatar
      = f.file_field :avatar
    .file-path-wrapper
      %input.file-path.validate{ type: "text", disabled: true }

  = f.submit "Update"
