- content_for :title, "Sign up"

.devise-container.layout.vertical.center.my-4.mx-0
  = image_tag "callogo2.png"

  = form_for resource, as: resource_name, url: registration_path(resource_name),
             html: { class: "layout vertical center" } do |f|

    = f.text_field :first_name, autofocus: true, required: true
    = f.text_field :last_name, required: true
    = f.email_field :email, required: true
    = f.password_field :password, required: true
    = f.password_field :password_confirmation, required: true, label: "Confirm Password"
    = f.collection_select :major_id, Major.all, :id, :major, prompt: "Choose Major"
    = f.collection_select :advised_by, User.where(advisor: true),
                                       :id, :email, prompt: "Choose Advisor"

    = f.submit "Sign up"
