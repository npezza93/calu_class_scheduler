- content_for :title do
  Login

.devise-container
  = image_tag "callogo2.png"

  = form_for resource, as: resource_name, url: session_path(resource_name),
             html: { class: "login-form" } do |f|
    = f.email_field :email, autofocus: true
    = f.password_field :password
    = f.submit "Log in"

  = link_to "forgot your password?", new_password_path(resource_name), id: "forgot_password"

  = link_to "sign up", new_registration_path(resource_name), id: "sign_up"

%dialog.forgot_password_dialog.mdl-dialog
  %h5.mdl-typography--headline.center-text{ style: "margin-top: 24px;" }
    forgot password?
  %p.center-text We'll email you a reset link

  = form_for resource, as: resource_name, url: password_path(resource_name),
             html: { class: "password-reset", method: :post } do |f|
    = f.email_field :email

    .mdl-dialog__actions
      = f.submit "Reset"
      %button.mdl-button.close{ type: "button" } Cancel
