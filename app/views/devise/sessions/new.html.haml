- content_for :title, "Login"

.devise-container.layout.vertical.center.my-4.mx-0
  = image_tag "callogo2.png"

  = form_for resource, as: resource_name, url: session_path(resource_name),
             html: { class: "layout vertical center" },
             validation: false do |f|
    = f.email_field :email, autofocus: true, required: true
    = f.password_field :password, required: true
    = f.submit "Log in"

  = link_to "Login as Guest", session_path(resource_name, guest: 1),
      method: :post, class: "mt-3 black-text"

  = link_to "Forgot Your Password?", new_password_path(resource_name), class: "mt-3 black-text"

  = link_to "Sign Up", new_registration_path(resource_name), class: "mt-6 black-text"
