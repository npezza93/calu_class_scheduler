- content_for(:title, "Login")

.devise-container
  = image_tag "callogo2.png"

  = form_for resource, as: resource_name, url: session_path(resource_name),
             html: { class: "login-form" } do |f|
    = f.email_field :email, autofocus: true, required: true
    = f.password_field :password, required: true
    = f.submit "Log in"

  = link_to "Forgot Your Password?", new_password_path(resource_name), id: "forgot_password"

  = link_to "Sign Up", new_registration_path(resource_name), id: "sign_up"

%dialog.forgot_password_dialog
  .mdc-card
    %h5.mdl-typography--headline.center-text Forgot Password?
    %p.center-text We'll email you a reset link

    = form_for resource, as: resource_name, url: password_path(resource_name),
             html: { class: "password-reset", method: :post } do |f|
      = f.email_field :email

      %section.mdc-card__actions
        = f.submit "Reset"
        %button.mdc-button.mdc-button--compact.mdc-card__action.close Cancel
