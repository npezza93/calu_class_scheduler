<core-overlay id="password_reset_overlay" autoCloseDisabled opened backdrop transition="core-transition-center">

  <%= form_for @user, :url => password_reset_path(params[:id]) do |f| %>
      <paper-input-decorator label="New Password">
        <%= f.password_field :password, required: "" %>
      </paper-input-decorator>
      
      <paper-input-decorator label="Confirm New Password">
        <%= f.password_field :password_confirmation, required: "" %>
      </paper-input-decorator>
  
      <div center-justified layout horizontal style="margin-top:14px;">
        <paper-button>
          <input id="submit_reset" name="commit" type="submit" value="Update Password">
	      </paper-button>
	    </div>

    
    <% if @user.errors.any? %>
      <div class="error_messages">
        <ul>
          <% for message in @user.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</core-overlay>