!!!
%html
  %head
    %title
      - if content_for?(:title)
        = "#{yield :title} | CalU Advisor"
      - else
        CalU Advisor
    = stylesheet_link_tag "application",
        "https://unpkg.com/material-components-web@latest/dist/material-components-web.min.css",
        media: "all", "data-turbolinks-track" => true
    = javascript_include_tag "application",
        "https://unpkg.com/material-components-web@latest/dist/material-components-web.min.js",
        "data-turbolinks-track" => true
    = csrf_meta_tags
    = favicon_link_tag "callogo2.png"
    %link{ href: image_url("callogo2.png"), rel: "apple-touch-icon" }/
    %meta{ content: "yes", name: "mobile-web-app-capable" }/
    %meta{ content: "yes", name: "apple-mobile-web-app-capable" }/
    %meta{ content: "minimal-ui, width=device-width,
      height=device-height, initial-scale=1.0, maximum-scale=1.0", name: "viewport" }/
    %meta{ content: "#2196F3", name: "theme-color" }/

  %body.fullbleed.vertical.layout
    = snackbar_notice(notice || alert)

    - if current_user
      %header.mdc-toolbar
        %section.mdc-toolbar__section.mdc-toolbar__section--align-start.flex-2
          - if content_for?(:back_url)
            = link_to yield(:back_url), style: "color: #fff;", class: "layout horizontal mr-3 ml-1" do
              %i.material-icons arrow_back
          - else
            .mr-3.ml-1{ style: "width: 24px; height: 24px;"}
          %span.mdc-toolbar__title= yield(:title)
        %section.mdc-toolbar__section.mdc-toolbar__section--align-end
          = yield(:toolbar_actions) if content_for?(:toolbar_actions)
          = link_to destroy_user_session_path, method: :delete, class: "mx-2", style: "color: #fff;display:flex;" do
            = material_icon.exit_to_app

    %main= yield
