!!!
%html
  %head
    %title
      = (yield :title) + " | "
      CalU Advisor
    = stylesheet_link_tag 'application', 'https://fonts.googleapis.com/icon?family=Material+Icons', 'http://cdn.materialdesignicons.com/1.5.54/css/materialdesignicons.min.css', 'https://code.getmdl.io/1.1.3/material.blue_grey-red.min.css', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'https://code.getmdl.io/1.1.3/material.min.js', 'data-turbolinks-track' => true
    = csrf_meta_tags
    = favicon_link_tag 'callogo2.png'
    %link{:href => image_url('callogo2.png'), :rel => "apple-touch-icon"}/
    %meta{:content => "yes", :name => "mobile-web-app-capable"}/
    %meta{:content => "yes", :name => "apple-mobile-web-app-capable"}/
    %meta{:content => "minimal-ui, width=device-width, height=device-height, initial-scale=1.0, maximum-scale=1.0", :name => "viewport"}/
    %meta{:content => "#2196F3", :name => "theme-color"}/

  %body.fullbleed.vertical.layout
    - if notice || alert
      #notice.mdl-js-snackbar.mdl-snackbar
        .mdl-snackbar__text
          = notice
          = alert
        %button.mdl-snackbar__action{:type => "button"}

    - if current_user
      .mdl-layout.mdl-js-layout.mdl-layout--fixed-drawer
        = render 'layouts/drawer'
        %main.mdl-layout__content
          .page-content
            #user-avatar-container
              - if current_user.avatar_url
                = current_user.email
                = link_to edit_user_registration_path do
                  = image_tag current_user.avatar_url
              - else
                = link_to edit_user_registration_path do
                  = current_user.email
            = yield
    - else
      = yield
