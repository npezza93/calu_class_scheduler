- content_for :title do
  = @category.category

%div
  .layout.vertical.center
    %h5.mdl-typography--headline.bold.center-text
      = @category.category
    - if @category.set_and_or_flag
      = @category.set_and_or_flag
    - else
      All of these sections must be completed to finish this category
  .category-container.layout.horizontal.center-justified.wrap
    = render @category.curriculum_category_sets

= link_to edit_curriculum_category_path(@category) do
  %button.mdl-button.mdl-js-button.mdl-button--fab.mdl-button--colored.new_category_fab
    %i.material-icons
      edit
