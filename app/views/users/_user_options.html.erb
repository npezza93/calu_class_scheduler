#delete_student_link:hover {
	color: #F44336;
}
</style>
<paper-item><%= link_to "Show " +  @user.first_name + " " + @user.last_name + "'s Schedule", user_schedules_path(@user), style:"text-decoration: none;color:#212121;font-family: 'RobotoDraft', sans-serif;width:20em;text-align:center" %></paper-item>
