= form_for [course, offering], html: { class: "layout vertical center mt-3" } do |f|
  = f.collection_select :days_time_id,
      DaysTime.all, :id, :pretty_day_time,
      prompt: "Choose a Day and Time", class: "mb-4"

  = f.collection_select :user_id,
      User.offering_advisors, :id, :professor,
      prompt: "Choose a Professor"

  = f.text_field :section, label: "Section Number",
      minlength: 2, help_text: "Ex: W1, 02, etc", required: true

  = f.submit
