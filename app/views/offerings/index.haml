- content_for :title do
  Courses Offered #{active_semester.semester}

%h3.mdl-display-2.header
  Offerings (#{active_semester.semester})

.layout.vertical.center{style: "margin-bottom:75px;"}
  = render 'layouts/search', link: offerings_path

  %table.mdl-data-table.mdl-js-data-table.mdl-shadow--2dp
    %thead
      %tr
        %th.mdl-data-table__cell--non-numeric
          course
        %th.mdl-data-table__cell--non-numeric
          instructor
        %th.mdl-data-table__cell--non-numeric
          time
    %tbody
      - @offerings.each do |offering|
        %tr.pointer.table-row{ href: edit_offering_path(offering) }
          %td.mdl-data-table__cell--non-numeric
            = offering.course.subject + offering.course.course.to_s + "-"+ offering.section + ": " + offering.course.title
          %td.mdl-data-table__cell--non-numeric
            = offering.user.email[0..-10].capitalize
          %td.mdl-data-table__cell--non-numeric
            = offering.days_time.pretty_day_time

  .layout.horizontal.justified.paginated-offerings
    = link_to_previous_page @offerings, 'previous', params: { search: params[:search] }
    .flex
    = link_to_next_page @offerings, 'next', params: { search: params[:search] }

.fixed-action-btn.click-to-toggle
  %a.main
    %button.mdl-button.mdl-js-button.mdl-button--fab.new-fab
      .i.material-icons
        add
  %ul
    %li
      = new_fab new_offering_path ,false
    %li
      %button.mdl-button.mdl-js-button.mdl-button--fab.alt-fab#upload-offerings
        .i.material-icons
          file_upload
= render 'upload'
