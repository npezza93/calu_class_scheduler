<% content_for :title do %>
    Courses
<% end %>

<div layout horizontal center-justified id="remove_course_div">
    <paper-shadow id="remove_course_shadow_div">
        <% @courses.each do |course| %>
            <paper-item noink style="text-align:start;cursor:default;">
                
                <div style="max-width:325px;">
                    <%= course.subject + '' +course.course.to_s + ': ' + course.title %>
                </div>
                
                <div flex></div>
                
                <div>
                    <a href='<%= edit_course_path(course) %>' class="course_link">
                        <paper-icon-button icon="create"></paper-icon-button>
                    </a>
                </div>
                
                <div>
                    <a data-confirm="Are you sure you want to remove &quot;<%= course.title %>&quot;?" data-method="delete" href="<%=course_path(course) %>" class="course_link">
                        <paper-icon-button icon="close"></paper-icon-button>
                    </a>
                </div>
                
            </paper-item>
        <% end %>
    </paper-shadow>
</div>
<br><br><br>
<% if notice %>
 	 <paper-toast id="toast1" class="capsule" text="<%= notice %>" style="padding-right: 60px;color: #4CAF50;" duration="10000" opened ></paper-toast>
<% end %>

<%= link_to "Create Course", new_course_path, id: "new_course_link", hidden: "" %>
<paper-fab icon="add" title="Create a Course" id="new_course_material"></paper-fab>

<script>
    $("#drawer_core_menu")[0].selected = 1;
</script>