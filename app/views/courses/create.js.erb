<% if @errors %>
    <% if not @course.errors[:subject].blank? %>
        document.getElementById("course_subject").parentNode.setAttribute("error","Subject <%= raw @course.errors[:subject][0] %>");
        document.getElementById("course_subject").parentNode.setAttribute("isInvalid","");
    <% else %>
         document.getElementById("course_subject").parentNode.removeAttribute("isInvalid","");
    <% end %>
    
    <% if not @course.errors[:course].blank? %>
        document.getElementById("course_course").parentNode.setAttribute("error","Course <%= raw @course.errors[:course][0] %>");
        document.getElementById("course_course").parentNode.setAttribute("isInvalid","");
    <% else %>
         document.getElementById("course_course").parentNode.removeAttribute("isInvalid","");
    <% end %>
    
    <% if not @course.errors[:title].blank? %>
        document.getElementById("course_title").parentNode.setAttribute("error","Title <%= raw @course.errors[:title][0] %>");
        document.getElementById("course_title").parentNode.setAttribute("isInvalid","");
    <% else %>
         document.getElementById("course_title").parentNode.removeAttribute("isInvalid","");
    <% end %>
    
<% end %>
