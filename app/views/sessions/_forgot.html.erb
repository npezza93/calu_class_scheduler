<paper-dialog id="overlay3" class="forgot_overlay1" transition="core-transition-top">
  <style>
    .forgot_overlay1 {
      font-family: 'RobotoDraft', sans-serif;
      font-size: 13px;
      background: #F3F9FE;
    }
    #overlay3 {
      width: 250px;
    }
    #submit_reset {
      display: inline-block;
      position: relative;
      border: 0;
      background: transparent;
      text-align: center;
      text-transform: uppercase;
      outline: none;
      cursor: pointer;
      font-family: 'RobotoDraft', sans-serif;
      color:#2196F3;
    }
    #forgot_header, #forgot_subheader {
      font-family: 'RobotoDraft', sans-serif;
    }
    #email_decorator /deep/ .focused-underline {
      /* line color when the input is focused */
      background-color: #4CAF50;
    }
  </style>
  
  <h3 id="forgot_header" layout horizontal center-justified>Forgot password?</h3>
    <p layout horizontal center-justified id="forgot_subheader">We'll email you a reset link.</p>
    
    <%= form_for :password_reset, url: password_resets_path do |f| %>
      <paper-input-decorator label="Email Address" error="That email doesn't exist!" id="email_decorator">
        <%= f.text_field :email, is: 'core-input' %>  
      </paper-input-decorator>
      
      <br>
      <div layout horizontal end-justified style="color:#2196F3;">
          <paper-button core-overlay-toggle>Cancel</paper-button>
          <paper-button><%= f.submit "Reset", id: "submit_reset" %></paper-button>
      </div>
    <% end %>

</paper-dialog>