- content_for :title, "Calendar"

.layout.horizontal.center-justified.calendar
  %table.center-text.calendar
    %tr{ style: "border:none;" }
      %th
      %th.day Monday
      %th.day Tuesday
      %th.day Wednesday
      %th.day Thursday
      %th.day Friday

    - work_schedule_time_range.step(30.minutes) do |start_time|
      %tr
        %td.time_slot= Time.at(start_time).utc.strftime("%l:%M%P")
        - %w(M T W R F).each do |day|
          %td.day_time_slot{ id: work_schedule_id(day, start_time) }
            - if (overlapping_o = find_overlapping_offering(@offerings, day, start_time))
              .schedule= overlapping_o.course.condensed_course
            - elsif (overlapping_ws = find_overlapping_work_schedule(@work_schedules, day, start_time))
              = link_to "", overlapping_ws, data: { method: :delete }, class: "blocked", remote: true
            - else
              = link_to "", work_schedules_path(day: day, start_time: start_time),
                            method: :post, remote: true
