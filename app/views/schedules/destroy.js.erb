var schedule = $("#<%= @offering.id %>");
schedule.find('input').prop('checked', false);
var link = schedule.find('a');
link.attr('data-method', 'post');
link.data().method = 'post';
link.attr('href', "<%= schedules_path(offering_id: @offering.id) %>");

<% @hidden_offerings.each do |id| %>
  var schedule = $("#<%= id %>");
  schedule.fadeIn();
<% end %>
