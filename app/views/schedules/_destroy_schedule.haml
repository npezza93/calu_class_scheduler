= link_to schedule_path(current_user.schedules.find_by(offering: offering)),
          method: :delete, remote: true do
  %label.mdl-checkbox.mdl-js-checkbox.mdl-js-ripple-effect
    %input.mdl-checkbox__input{ type: "checkbox", checked: true }
    %span.mdl-checkbox__label
      = offering.days_time.days
      from
      - if offering.days_time.start_time.present?
        = offering.days_time.start_time.split(" ")[0] + "-" + offering.days_time.end_time
      Prof. #{offering.user.last_name.capitalize}
